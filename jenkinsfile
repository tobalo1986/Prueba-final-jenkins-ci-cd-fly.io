pipeline {
    agent any

    environment {
        NODE_ENV = 'production'
        FLY_API_TOKEN = credentials('fly_api_token') 
    }

    triggers {
        githubPush() 
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'deploy-jenkins', url: 'https://github.com/tobalo1986/Prueba-final-jenkins-ci-cd-fly.io.git'
            }
        }

        stage('Instalar dependencias') {
            steps {
                sh 'npm install'
            }
        }

        stage('Ejecutar Tests') {
            steps {  
                sh 'npm run test'
            }
        }

        stage('Construir imagen Docker') {
            steps {
                sh 'docker build -t flyio-app .'
            }
        }

        stage('Desplegar en Fly.io') {
            steps {
                sh '''
                    curl -L https://fly.io/install.sh | sh
                    flyctl deploy --config fly.toml --remote-only
                '''
            }
        }
    }

    post {
        success {
            echo 'Â¡Despliegue exitoso!'
        }
        failure {
            echo 'Hubo un fallo en el pipeline.'
        }
    }
}
