pipeline {
    agent any 

    environment {
        FLY_API_TOKEN = credentials('fly_api_token')
    }

   
    triggers {
        githubPush() // Trigger para cada push en GitHub
    }
    
    stages {

        stage('Install Fly.io') {
            steps {
                echo 'Installing Fly.io...'
                withCredentials([string(credentialsId: 'FLY_API_TOKEN', variable: 'FLY_API_TOKEN')]) {
                    sh '''
                        # Instalar flyctl si no está ya disponible
                        curl -L https://fly.io/install.sh | sh
                        export FLYCTL_INSTALL="/var/jenkins_home/.fly"
                        export PATH="$FLYCTL_INSTALL/bin:$PATH"
                        # Autenticarse con Fly.io
                        fly auth token $FLY_API_TOKEN
                    '''
                }
            }
        }

        stage('Install dependencies') {
            when {
                branch 'deploy-jenkins'  // Solo se ejecuta en la rama deploy-jenkins
            }
            steps {
                echo 'Installing dependencies...'
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            when {
                branch 'deploy-jenkins'  // Solo se ejecuta en la rama deploy-jenkins
            }
            steps {
                echo 'Running tests...'
                sh 'npm run test'
            }
        }

        stage('Build Docker Image') {
            when {
                branch 'deploy-jenkins'  // Solo se ejecuta en la rama deploy-jenkins
            }
            steps {
                echo 'Building Docker image...'
                sh '''
                    # Construir la imagen Docker
                    docker build -t flyio-app .
                '''
            }
        }

        stage('Deploy to Fly.io') {
            when {
                branch 'deploy-jenkins'  // Solo se ejecuta en la rama deploy-jenkins
            }
            steps {
                echo 'Deploying the project to Fly.io...'
                sh '''
                    # Desplegar la aplicación en Fly.io
                    /var/jenkins_home/.fly/bin/flyctl deploy --app curso-devops-jenkins --remote-only
                '''
            }
        }
    }

    post {
        success {
            echo '¡Despliegue exitoso!'
        }
        failure {
            echo 'Hubo un fallo en el pipeline.'
        }
    }
}
