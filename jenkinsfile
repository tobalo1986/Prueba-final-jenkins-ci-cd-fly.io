pipeline {
    agent any

    environment {
        NODE_ENV = 'production'
        FLY_API_TOKEN = credentials('fly_api_token') // Usar el ID de la credencial
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'deploy-jenkins', url: 'https://github.com/tobalo1986/Prueba-final-jenkins-ci-cd-fly.io.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm run test'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t flyio-app .'
            }
        }

        stage('Deploy to Fly.io') {
            steps {
                sh '''
                curl -L https://fly.io/install.sh | sh
                flyctl deploy --config fly.toml --remote-only
                '''
            }
        }
    }

    post {
        success {
            echo 'Despliegue exitoso!'
        }
        failure {
            echo 'Hubo un fallo en el pipeline.'
        }
    }
}
